<Page x:Class="Travelouge.Model.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Travelouge.Model"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="Gray">
        <TextBox HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Width="200"
                 Name="usernameBox">

        </TextBox>

        <PasswordBox HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="200"
                 Name="passwordBox" Margin="0,285,0,0">

        </PasswordBox>

        <Button
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Width="200"
            Height="52"
            Margin="0,308,0,0"
            Name="loginButton"
            Content="Login"
            Click="loginButton_Click">

        </Button>

        <Label Content="Login"
               FontSize="30px"
               Foreground="Aqua"
               HorizontalAlignment="Center" Margin="0,100,0,0" VerticalAlignment="Top" Height="53" Width="200"/>

    </Grid>
</Page>
