<Page x:Class="Travelouge.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Travelouge.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="WhiteSmoke">
        <Button
            Name="checkButton"
            Click="checkButton_Click"
            Content="Add"
            HorizontalAlignment="Left"
            Margin="10,97,0,0"
            VerticalAlignment="Top"
            Height="52" Width="227"/>
        <Label Content="Add the places you'd like to visit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <TextBox
            Name="locationBox" 
            HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="227" Height="51"/>
        <Canvas
            Name="graphCanvas"
            Margin="242,0,0,0"/>

        <ScrollViewer
            Name="locationList"
            Margin="0,171,563,0"/>
        <Button
            x:Name="kruskalButton"
            Content="Find min spanning tree"
            HorizontalAlignment="Left"
            Margin="10,154,0,0"
            VerticalAlignment="Top"
            Height="52" Width="227"
            Click="kruskalButton_Click"/>
        <Button
            x:Name="resetButton"
            Content="Reset Graph"
            HorizontalAlignment="Left"
            Margin="10,211,0,0"
            VerticalAlignment="Top"
            Height="52" Width="227"
            Click="resetButton_Click"/>



    </Grid>
</Page>
