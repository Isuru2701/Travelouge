<Page x:Class="Travelouge.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Travelouge.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="WhiteSmoke">
        <Button
            Name="checkButton"
            Click="checkButton_Click"
            Content="Add"
            HorizontalAlignment="Left"
            Margin="10,97,0,0"
            VerticalAlignment="Top"
            Height="52" Width="227"/>
        <Label Content="Add the places you'd like to visit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>

        <TextBox
            Name="locationBox" 
            HorizontalAlignment="Left" Margin="10,41,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="227" Height="51"/>
        <Canvas
            Name="listCanvas"
            Margin="261,0,10,301"/>

    </Grid>
</Page>
