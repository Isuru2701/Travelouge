<Page x:Class="Travelouge.View.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Travelouge.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="WhiteSmoke">
        <TextBox
            Name="locationBox"
            Margin="10,55,563,358">

        </TextBox>
        <Button
            Name="checkButton"
            Click="checkButton_Click"
            Content="Add"
            HorizontalAlignment="Left"
            Margin="10,97,0,0"
            VerticalAlignment="Top"
            Height="52" Width="227"/>
        <Label Content="Add the places you'd like to visit" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox
            Width="200px"
            d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,154,590,10"/>

    </Grid>
</Page>
